<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="1"
    android:orientation="vertical"
    android:background="@color/textColorPrimary"
    tools:context="com.example.vudang.fitness.Activity.HomeFragment">
    <RelativeLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">

        <TextView
            android:text="1/12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:id="@+id/number_text" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="Rest"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_columnWeight="1"
        android:text="SEARCH FEE"
        android:layout_rowWeight="1"
        android:layout_height="200dp"
        android:gravity="center">


        <Button
            android:text="10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button_coundown"
            android:background="@drawable/clock"
            />
    </RelativeLayout>

    <GridLayout
        android:text="SEARCH FEE"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:columnCount="1"
        android:rowCount="1"
        >

        <GridLayout
            android:layout_columnWeight="1"
            android:text="SEARCH FEE"
            android:layout_rowWeight="1"
            android:columnCount="2"
            android:rowCount="1"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:columnCount="2"
                android:rowCount="1"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp">
                <LinearLayout
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="200dp"
                    android:layout_height="100dp">
                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:color/transparent"
                        android:id="@+id/imageView"
                        android:layout_weight="1"
                        />
                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--app:srcCompat="@android:color/transparent"-->
                        <!--android:id="@+id/imageView"-->
                        <!--android:layout_weight="1"-->
                       <!--/>-->
                </LinearLayout>
                <GridLayout
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:rowCount="2"
                    android:columnCount="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Ready for"
                        android:textSize="25dp"
                        android:layout_rowSpan="1"
                        android:textAlignment="center"
                        android:layout_gravity="fill_horizontal"
                        android:id="@+id/textView2"
                        />

                    <Button
                        android:text="Full Body"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_rowSpan="1"
                        android:textAlignment="center"
                        android:background="@android:color/transparent"
                        android:layout_gravity="fill_horizontal"
                        android:id="@+id/btn_exersice"
                        android:textColor="#0263da"
                        />
                </GridLayout>

            </GridLayout>
        </GridLayout>
    </GridLayout>



</GridLayout>