<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vudang.fitness.Activity.HomeFragment"
    android:weightSum="1">


    <RelativeLayout
        android:text="SEARCH FEE"
        android:layout_width="match_parent"
        android:layout_height="330dp">


        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_play"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/clock"
            app:srcCompat="@mipmap/ic_launcher_play"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:columnCount="2"
           android:rowCount="1"
           android:layout_gravity="bottom"
           android:layout_alignParentBottom="true"
           android:layout_alignParentStart="true"
           android:layout_marginBottom="0dp">
           <LinearLayout
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="match_parent"
                   app:srcCompat="@android:color/transparent"
                   android:id="@+id/imageView"
                   android:layout_weight="1"
                   android:background="@drawable/workout"/>
           </LinearLayout>
           <GridLayout
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:rowCount="2"
               android:columnCount="1"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:paddingTop="30dp"
               android:elevation="1dp">

               <TextView
                   android:layout_width="match_parent"
                   android:text="Excersice"
                   android:textSize="25dp"
                   android:layout_rowSpan="1"
                   android:textAlignment="center"
                   android:layout_gravity="fill_horizontal"
                   android:id="@+id/textView2"
                   />

               <Button
                   android:text="Full Body"
                   android:textSize="24sp"
                   android:layout_width="match_parent"
                   android:layout_rowSpan="1"
                   android:textAlignment="center"
                   android:background="@android:color/transparent"
                   android:layout_gravity="fill_horizontal"
                   android:id="@+id/btn_exersice"
                   android:textColor="#0263da"
                   />
           </GridLayout>

       </GridLayout>
   </RelativeLayout>


</LinearLayout>